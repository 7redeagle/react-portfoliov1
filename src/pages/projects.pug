h2.projects__title Projects
  div.projects__grid
    each project in projects 
      div.card 
        h3.card__title #{project.title}
        .card__image  
          img(src=project.imgSrc alt=project.alt width="100%" height="100%")
        p.card__text= project.description
        div.card__links
          a(href=project.demo target="_blank" rel="noopener")
            button.btn.btn--projects demo
          a(href=project.source target="_blank" rel="noopener")
            button.btn.btn--projects source code
